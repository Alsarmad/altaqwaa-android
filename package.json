{
  "name": "altaqwaa-root",
  "version": "1.0.0",
  "description": "Main project configuration for Altaqwaa",
  "scripts": {
    "commit": "node scripts/autoCommit.mjs",
    "frontend:install": "cd frontend && npm install",
    "frontend:build": "cd frontend && npm run build",
    "frontend:start": "cd frontend && npm start",
    "server:install": "cd server && npm install",
    "server:build": "cd server && npm run build",
    "server:start": "cd server && npm start",
    "server:test": "cd server && npm test",
    "cordova:install": "cd cordova && npm install",
    "cordova:android": "cd cordova && npm run android",
    "cordova:re-android": "cd cordova && npm run re-android",
    "cordova:www": "npm run frontend:build && node scripts/moveBuildToCordova.mjs",
    "cordova:build-apk": "npm run cordova:www && cd cordova && npm run build-apk",
    "cordova:build-aab": "npm run cordova:www && cd cordova && npm run build-aab",
    "cordova:device": "cd cordova && npm run device",
    "cordova:bu-device": "cd cordova && npm run bu-device",
    "cordova:logcat": "cd cordova && npm run logcat",
    "cordova:log": "cd cordova && npm run log",
    "cordova:clean": "cd cordova && npm run clean",
    "build": "npm run frontend:build && npm run server:build",
    "start": "npm run frontend:start & npm run server:start",
    "start:dev": "concurrently \"npm run frontend:start\" \"npm run server:start\"",
    "test": "npm run frontend:test && npm run server:test"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "fs-extra": "^11.2.0",
    "concurrently": "^7.0.0"
  }
}